{
    "fields": {
        "website": {
            "collapsible":true,
            "collapsed": true,
            "fields": {
                "sslftp": {
                    "type": "select",
                    "optionLabels": [
                        "0 - FTP (plain old FTP)",
                        "1 - Use SSL/TLS for FTP (FTPS)",
                        "2 - Use SSH for FTP (SFTP)"
                    ],
                    "removeDefaultNone": true,
                    "helper": "Select the protcol required by your web hoster"
                },
                "password": {
                    "type": "password"
                },
                "localcopypath": {
                    "helper": "Enter a path here (e.g. /var/www/html) to copy files to a local web server folder instead of FTP"
                }
            }
        },
        "websettings": {
            "collapsible":true,
            "collapsed": true,
            "fields": {
                "autoupdate": {
                    "rightLabel": "Auto update"
                },
                "includestdfiles": {
                    "rightLabel": "Include standard files",
                    "helper": "Select this to have the standard web site files uploaded"
                },
                "includegraphdatafiles": {
                    "rightLabel": "Include graph data files",
                    "helper": "Select this to have the graph data files uploaded"
                },
                "includemoonimage": {
                    "rightLabel": "Include Moon image file",
                    "helper": "Select this to have the Moon image file uploaded - you must enable the image file generation below"
                },
                "activeftp": {
                    "rightLabel": "Active FTP mode",
                    "helper": "Not normally required - use with caution"
                },
                "ftprename": {
                    "rightLabel": "FTP rename",
                    "helper": "Use this if your FTP server supports it (most do)"
                },
                "ftpdelete": {
                    "rightLabel": "Delete before upload",
                    "helper": "Use this only if your FTP server requires it (most do not)"
                },
                "utf8encode": {
                    "rightLabel": "UTF-8 encoding",
                    "helper": "Use UTF-8 encoding for the standard files"
                },
                "ftplogging": {
                    "rightLabel": "FTP logging",
                    "helper": "Log FTP activity to ftplog.txt for diagnostic purposes"
                },
                "updateinterval": {
                    "helper": "Interval between web page updates in minutes"
                },
                "enablerealtime": {
                    "rightLabel": "Enable Realtime",
                    "helper": "Start the realtime timer so that realtime actions can take place"
                },
                "enablerealtimeftp": {
                    "rightLabel": "Enable realtime FTP",
                    "helper": "Establish the realtime FTP connection so that FTP uploads can take place at the realtime interval"
                },
                "realtimetxtftp": {
                    "rightLabel": "Realtime.txt FTP",
                    "helper": "FTP the realtime.txt file at the realtime interval. Cumulus MX does not use this file itself"
                },
                "realtimegaugestxtftp": {
                    "rightLabel": "Realtimegauges.txt FTP",
                    "helper": "FTP the realtimegauges.txt file at the realtime interval. Cumulus MX uses this for the SteelSeries gauges"
                },
                "realtimeinterval": {
                    "helper": "Interval between realtime updates in seconds"
                }
            }
        },
